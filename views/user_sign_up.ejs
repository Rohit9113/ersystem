<link rel="stylesheet" href="/css/google.css">

<div class="container">

    <div class="row mt-3">
        <div class="col-md-6 m-auto">
            <div class="card card-body">

                <form action="/users/create" method="post">

                    <div class="form-group mt-2">
                        <input type="text" id="name" name="name" class="form-control" placeholder="Name"/>
                    </div>

                    <div class="form-group mt-2">
                        <input type="email" id="email" name="email" class="form-control" placeholder="Email"/>
                    </div>
    
                    <div class="form-group mt-2">
                        <input type="password" id="password" name="password" class="form-control" placeholder="Password"/>
                    </div>

                    <div class="form-group mt-2">
                        <input type="password" id="pass" name="confirm_password" class="form-control" placeholder="Confirm Password"/>
                    </div>
    
                    <div class="text-center col-12 mx-auto mt-3">
                        <button class="btn btn-primary color  " type="submit" style="width: 100%;">Sign Up</button>
                    </div>

                    <!-- <div class="or-container"><div class="line-separator"></div> <div class="or-label">or</div><div class="line-separator"></div></div> -->
                    <div class="row mt-3">
                        <div class="col-md-12">
                        <a class="btn btn-lg btn-google btn-block text-uppercase btn-outline" href="/users/auth/google"><img src="https://img.icons8.com/color/16/000000/google-logo.png"> Sign Up With Google</a>

                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>

</div>