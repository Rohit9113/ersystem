<link rel="stylesheet" href="/css/google.css">

<div class="container ">

  <div class="row mt-3">
      <div class="col-md-6 m-auto">
          <div class="card card-body">

              <form action="/users/create-session" method="post">
                  <div class="form-group mt-2">
                      <input type="email" id="email" name="email" class="form-control" placeholder="Email"/>
                  </div>
  
                  <div class="form-group mt-2">
                      <input type="password" id="password" name="password" class="form-control" placeholder="Password"/>
                  </div>

  
                  <div class=" col-12  mt-3 text-center ">
                      <button class="btn btn-primary" type="submit" style="width: 100%;">Log In</button>
                  </div>

                  
                  <div class="or-container"><div class="line-separator"></div> <div class="or-label">or</div><div class="line-separator"></div></div>
                  <div class="row">
                    <div class="col-md-12">
                      <a class="btn btn-lg btn-google btn-block text-uppercase btn-outline" href="/users/auth/google"><img src="https://img.icons8.com/color/16/000000/google-logo.png"> Sign In With Google</a>

                    </div>
                </div>
                <br>
                <p class="text-inverse text-center">Not Yet! Sign Up Now  <a href="/users/sign-up" data-abc="true">Sign Up</a></p>
              </form>

          </div>
      </div>
  </div>

</div>

